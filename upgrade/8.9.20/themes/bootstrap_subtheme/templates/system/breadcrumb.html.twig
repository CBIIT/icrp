{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}
{% if breadcrumb %}
    <div id="forum-breadcrumb" style="display:none;">
        <ol class="breadcrumb">
            {% for item in breadcrumb %}
                {% if loop.index > 2 %}
                <li {{ item.attributes }}>
                    {% if item.url %}
                        <a href="{{ item.url }}">{{ item.text }}</a>
                    {% else %}
                        {{ item.text }}
                    {% endif %}
                </li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>
{% endif %}
