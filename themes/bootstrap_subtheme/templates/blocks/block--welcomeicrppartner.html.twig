{#/**
 *
 * The following code is used to determine if the current user has the role of "manager"
 * On the Welcome tab, users with role:manager get a different block placed in the tab
 *
 */#}
{% set isManager="false" %}
{% for role in user.roles %}
	{% if (role == "manager") or (role == "administrator") %}{% set isManager="true" %}{% endif %}
{% endfor %}
<div class="tab-content partner-content">
	<div id="welcome" class="tab-pane fade in active">
	{# Old Code.  Rewrote to use partnerhomewelcome for both
		{% if isManager=="true" %}
			{{ drupal_block('partnerhomewelcomemanagereditbutton') }}
			{{ drupal_block('partnerhomewelcomemanager') }}
		{% else %}
			{{ drupal_block('partnerhomewelcome') }}
		{% endif %}
		#}
		{{ drupal_block('partnerhomewelcome') }}
		{% if isManager=="true" %}
			{{ drupal_block('partnerhomewelcomemanager') }}
		{% endif %}

	</div>

	<div id="partner-calendar" class="tab-pane fade">
		{% if isManager=="true" %}
			{{ drupal_block('partnerhomepartnercalendareditbutton') }}
		{% endif %}
		{{ drupal_block('partnerhomepartnercalendar') }}
	</div>
	<div id="partner-management" class="tab-pane fade">
		{% if isManager=="true" %}
			{{ drupal_block('partnerhomepartnermanagementeditbutton') }}
		{% endif %}
		{{ drupal_block('partnerhomepartnermanagement') }}
	</div>
</div>