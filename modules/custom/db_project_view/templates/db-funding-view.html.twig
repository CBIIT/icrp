{% spaceless %}
{% autoescape true %}

<div class="native-font">

{% if funding_details %}
<h3 class="title margin-right">View Project Funding</h3>
<h4 class="h4 grey">{{ funding_details.project_title | raw }}</h4>
<hr class="less-margins">


<div id="google_translate_element" class="pull-right"></div><script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL}, 'google_translate_element');
}
</script><script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

<dl class="dl-horizontal margin-bottom margin-top">
  <dt>AltAward Code</dt>
  <dd>{{ funding_details.alt_award_code | default('Not specified')}}</dd>
  <dt>Funding Organization</dt>
  <dd>{{ funding_details.funding_organization  | default('Not specified')}}</dd>
  <dt>Budget Dates</dt>
  <dd>
    {% if funding_details.budget_start_date or funding_details.budget_end_date %}
      {{ funding_details.budget_start_date | default('N/A') | raw }}
      to {{ funding_details.budget_end_date | default('N/A') | raw }}
    {% else %}
      <i>Not specified</i>
    {% endif %}
  <dt>Principle Investigator</dt>
  <dd>{{ funding_details.pi_name | default('Not specified')}}</dd>
  <dt>Institution</dt>
  <dd>{{ funding_details.institution | default('Not specified')}}</dd>
  <dt>Location</dt>
  <dd>
    {% if funding_details.city %}
     {{ funding_details.city }}, 
    {% endif %}
    {% if funding_details.state %}
     {{ funding_details.state }}, 
    {% endif %}
  {{ funding_details.country | default('Not specified')}}</dd>
</dl>


{% if funding_details.technical_abstract %}
<h4>Technical Abstract</h4>
<div>{{ funding_details.technical_abstract | raw }}</div>
<hr>
{% endif %}

{% if funding_details.public_abstract %}
<h4>Public Abstract</h4>
<div>{{ funding_details.public_abstract | raw }}</div>
<hr>
{% endif %}

<h5 class="h5">Cancer Types</h5>
<ul>
  {% for row in cancer_types %}
  <li>
    {{ row.cancer_type }}
  </li>
  {% endfor %}
</ul>

<h5 class="h5">Common Scientific Outline (CSO) Research Areas</h5>
<ul>
  {% for row in cso_research_areas %}
  <li>
    <b>{{ row.cso_code }} {{ row.cso_category }} </b> {{ row.cso_short_name }}
  </li>
  {% endfor %}
</ul>


{% endif %}


</div>

{% endautoescape %}
{% endspaceless %}
